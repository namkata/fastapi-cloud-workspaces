# FastAPI Cloud Workspaces - Environment Configuration
# Copy this file to .env and update the values as needed

# Application Settings
APP_NAME=FastAPI Cloud Workspaces
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
API_V1_STR=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8001
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8001"]

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fastapi_workspaces
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=fastapi_workspaces
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_ECHO=false

# Test Database (for testing)
TEST_DATABASE_URL=sqlite:///./test.db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication & Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256
PASSWORD_HASH_ALGORITHM=bcrypt

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (Optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=FastAPI Cloud Workspaces

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=["jpg", "jpeg", "png", "gif", "pdf", "txt", "doc", "docx", "xls", "xlsx", "ppt", "pptx", "zip", "rar"]

# AWS S3 Configuration (if using S3 storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Google Cloud Storage Configuration (if using GCS)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-gcs-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PATH=/metrics
ENABLE_TRACING=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Sentry Configuration (Optional)
SENTRY_DSN=your-sentry-dsn-url
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_SOCIAL_LOGIN=false

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=fastapi_workspaces

# Celery Configuration (if using background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=fastapi-workspaces
NGINX_PORT=80
NGINX_SSL_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268

# Development Settings
RELOAD=true
WORKERS=1

# Production Settings (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# RELOAD=false
# WORKERS=4
# LOG_LEVEL=WARNING
